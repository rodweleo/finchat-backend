{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./"
  },
  "include": ["src/**/*", "hardhat.config.js", "src/contracts"],
  "exclude": ["node_modules"]
}
